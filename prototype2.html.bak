    <link rel="stylesheet" href="shared-styles.css">
    <style>
        /* Prototype 2 Specific Styles */

        /* Conversational Search Box */
        .conversational-search {
            background-color: var(--background-white);
            border: 2px solid var(--primary-magenta);
            border-radius: var(--radius-lg);
            padding: var(--spacing-lg);
            box-shadow: var(--shadow-md);
            margin-top: var(--spacing-lg);
            transition: all 0.3s;
        }

        .conversational-search:hover {
            box-shadow: var(--shadow-lg);
            transform: translateY(-2px);
        }

        .search-label {
            display: flex;
            align-items: center;
            gap: var(--spacing-sm);
            color: var(--primary-magenta);
            font-weight: 600;
            margin-bottom: var(--spacing-sm);
        }

        .search-label svg {
            width: 24px;
            height: 24px;
        }

        .conversational-input {
            width: 100%;
            padding: 16px;
            border: 1px solid var(--border-light);
            border-radius: var(--radius-md);
            font-size: 14px;
            font-family: var(--font-family);
            resize: none;
            min-height: 40px;
            overflow: hidden;
            transition: border-color 0.2s;
        }

        .conversational-input:focus {
            outline: none;
            border-color: var(--primary-magenta);
            box-shadow: 0 0 0 3px rgba(163, 22, 77, 0.1);
        }

        .search-subtitle {
            font-size: 14px;
            color: var(--text-medium);
            margin-top: var(--spacing-sm);
        }

        .example-questions {
            margin-top: var(--spacing-md);
        }

        .example-questions-label {
            font-size: 13px;
            color: var(--text-medium);
            margin-bottom: var(--spacing-sm);
        }

        .example-chips {
            display: flex;
            gap: var(--spacing-sm);
            flex-wrap: wrap;
        }

        .example-chip {
            padding: 8px 14px;
            background-color: #f9fafb;
            border: 1px solid var(--border-light);
            color: var(--text-dark);
            border-radius: var(--radius-full);
            font-size: 13px;
            cursor: pointer;
            transition: all 0.2s;
        }

        .example-chip:hover {
            background-color: var(--primary-magenta);
            color: white;
            border-color: var(--primary-magenta);
        }

        /* Conversation Modal (Full Screen) */
        .conversation-modal {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: var(--background-light);
            z-index: 1000;
            display: none;
            flex-direction: column;
        }

        .conversation-modal.active {
            display: flex;
        }

        .conversation-header {
            background-color: var(--background-white);
            padding: var(--spacing-md) var(--spacing-lg);
            box-shadow: var(--shadow-sm);
            display: flex;
            align-items: center;
            justify-content: space-between;
            position: sticky;
            top: 0;
            z-index: 10;
        }

        .conversation-header-left {
            display: flex;
            align-items: center;
            gap: var(--spacing-md);
        }

        .back-btn {
            width: 36px;
            height: 36px;
            background: none;
            border: 1px solid var(--border-light);
            border-radius: var(--radius-sm);
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: background-color 0.2s;
        }

        .back-btn:hover {
            background-color: var(--background-light);
        }

        .conversation-title {
            display: flex;
            align-items: center;
            gap: var(--spacing-sm);
        }

        .conversation-title h2 {
            font-size: 18px;
            font-weight: 600;
            margin: 0;
        }

        .aria-badge {
            background: linear-gradient(135deg, var(--aria-green), var(--secondary-teal));
            color: white;
            padding: 4px 10px;
            border-radius: var(--radius-full);
            font-size: 12px;
            font-weight: 600;
        }

        .new-search-btn {
            padding: 8px 16px;
            background-color: var(--background-light);
            border: 1px solid var(--border-light);
            border-radius: var(--radius-md);
            cursor: pointer;
            font-size: 14px;
            font-weight: 500;
            transition: all 0.2s;
        }

        .new-search-btn:hover {
            background-color: white;
            border-color: var(--primary-magenta);
            color: var(--primary-magenta);
        }

        .conversation-content {
            flex: 1;
            overflow-y: auto;
            padding: var(--spacing-xl);
            max-width: 900px;
            margin: 0 auto;
            width: 100%;
        }

        .conversation-thread {
            display: flex;
            flex-direction: column;
            gap: var(--spacing-lg);
        }

        .thread-message {
            animation: fadeIn 0.4s ease-out;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .thread-message.user-message {
            background-color: var(--background-white);
            padding: var(--spacing-lg);
            border-radius: var(--radius-md);
            border-left: 4px solid var(--primary-magenta);
        }

        .thread-message.user-message .message-label {
            font-size: 12px;
            font-weight: 600;
            color: var(--primary-magenta);
            text-transform: uppercase;
            margin-bottom: var(--spacing-sm);
            letter-spacing: 0.5px;
        }

        .thread-message.user-message .message-text {
            font-size: 18px;
            font-weight: 500;
            color: var(--text-dark);
        }

        .thread-message.assistant-message .message-header {
            display: flex;
            align-items: center;
            gap: var(--spacing-sm);
            margin-bottom: var(--spacing-md);
        }

        .thread-message.assistant-message .aria-avatar {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, var(--aria-green), var(--secondary-teal));
            border-radius: var(--radius-full);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 700;
            font-size: 18px;
        }

        .thread-message.assistant-message .message-author {
            font-weight: 600;
            font-size: 15px;
        }

        .thread-message.assistant-message .message-text {
            font-size: 16px;
            line-height: 1.7;
            color: var(--text-dark);
            margin-bottom: var(--spacing-md);
        }

        .conversation-footer {
            background-color: var(--background-white);
            padding: var(--spacing-md) var(--spacing-lg);
            box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.1);
            position: sticky;
            bottom: 0;
        }

        .footer-content {
            max-width: 900px;
            margin: 0 auto;
        }

        .footer-input-wrapper {
            display: flex;
            gap: var(--spacing-sm);
        }

        .footer-input {
            flex: 1;
            padding: 14px 18px;
            border: 1px solid var(--border-light);
            border-radius: var(--radius-lg);
            font-size: 15px;
            font-family: var(--font-family);
            resize: none;
            max-height: 120px;
        }

        .footer-input:focus {
            outline: none;
            border-color: var(--primary-magenta);
        }

        .footer-send-btn {
            width: 48px;
            height: 48px;
            background-color: var(--primary-magenta);
            color: white;
            border: none;
            border-radius: var(--radius-full);
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
            flex-shrink: 0;
        }

        .footer-send-btn:hover {
            background-color: var(--primary-magenta-hover);
            transform: scale(1.05);
        }

        .footer-send-btn:disabled {
            background-color: var(--text-light);
            cursor: not-allowed;
            transform: none;
        }

        /* Programs Display in Thread */
        .thread-programs {
            display: grid;
            gap: var(--spacing-md);
            margin-top: var(--spacing-md);
        }

        .thread-program-card {
            background-color: var(--background-white);
            border: 1px solid var(--border-light);
            border-radius: var(--radius-md);
            padding: var(--spacing-lg);
            transition: all 0.2s;
            cursor: pointer;
        }

        .thread-program-card:hover {
            box-shadow: var(--shadow-md);
            transform: translateX(4px);
            border-color: var(--primary-magenta);
        }

        .thread-program-card h3 {
            font-size: 18px;
            font-weight: 600;
            color: var(--primary-magenta);
            margin-bottom: var(--spacing-xs);
        }

        .thread-program-card .university {
            font-size: 16px;
            font-weight: 500;
            margin-bottom: var(--spacing-xs);
        }

        .thread-program-card .location {
            font-size: 14px;
            color: var(--text-medium);
            margin-bottom: var(--spacing-md);
        }

        .thread-program-details {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: var(--spacing-sm);
            margin-top: var(--spacing-md);
            padding-top: var(--spacing-md);
            border-top: 1px solid var(--border-light);
        }

        .thread-program-detail {
            font-size: 13px;
            color: var(--text-medium);
        }

        .thread-program-detail strong {
            color: var(--text-dark);
            display: block;
            margin-bottom: 2px;
        }

        /* Listing Link Card in Thread */
        .listing-link-card {
            background: linear-gradient(135deg, var(--primary-magenta), #7b1042);
            color: white;
            padding: var(--spacing-xl);
            border-radius: var(--radius-md);
            margin-top: var(--spacing-md);
            text-decoration: none;
            display: block;
            transition: all 0.2s;
        }

        .listing-link-card:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-lg);
        }

        .listing-link-card h4 {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: var(--spacing-sm);
            color: white;
        }

        .listing-link-card p {
            font-size: 15px;
            opacity: 0.9;
            margin-bottom: var(--spacing-sm);
            color: white;
        }

        .listing-link-card .cta {
            display: inline-flex;
            align-items: center;
            gap: var(--spacing-xs);
            font-size: 15px;
            font-weight: 600;
            padding: 10px 20px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: var(--radius-full);
            margin-top: var(--spacing-sm);
            color: white;
        }

        @media (max-width: 768px) {
            .conversation-content {
                padding: var(--spacing-md);
            }

            .thread-program-details {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>

